<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.github.fujianlian.klinechart.KLineChartView
            android:id="@+id/kLineChartView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_10"
            android:text="数字资产金融期权"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/kLineChartView"
            app:layout_constraintStart_toStartOf="@+id/kLineChartView"
            app:layout_constraintTop_toBottomOf="@+id/kLineChartView" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/color_111622"
            app:layout_constraintTop_toBottomOf="@+id/kLineChartView" />


        <LinearLayout
            android:id="@+id/cl_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_logo_currency"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/shape_rectangle_with" />

            <TextView
                android:id="@+id/tv_investment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="投资(USDT):"
                android:textColor="@color/color_9D9EC3"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_investment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />


            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/current_profit"
                android:textColor="@color/color_9D9EC3"
                android:textSize="@dimen/sp_10"
                app:layout_constraintLeft_toRightOf="@+id/tv_investment" />

            <TextView
                android:id="@+id/tv_current_profit"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:text="+0"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_10"
                app:layout_constraintEnd_toEndOf="@+id/tv_current"
                app:layout_constraintStart_toStartOf="@+id/tv_current"
                app:layout_constraintTop_toBottomOf="@+id/tv_current" />

            <TextView
                android:id="@+id/tv_current_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/current_pl"
                android:textColor="@color/color_9D9EC3"
                android:textSize="@dimen/sp_10"
                app:layout_constraintLeft_toRightOf="@+id/tv_current" />

            <TextView
                android:id="@+id/tv_current_pl_value"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:ellipsize="end"
                android:lines="1"
                android:text="+0%"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_10"
                app:layout_constraintEnd_toEndOf="@+id/tv_current_pl"
                app:layout_constraintStart_toStartOf="@+id/tv_current_pl"
                app:layout_constraintTop_toBottomOf="@+id/tv_current_pl" />

            <TextView
                android:id="@+id/tv_close_order"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/shape_rectangle_with"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_6"
                android:text="平仓"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_current_pl_value"
                app:layout_constraintLeft_toRightOf="@+id/tv_current_pl"
                app:layout_constraintTop_toTopOf="@+id/tv_current_pl" />


            <!--<TextView-->
            <!--android:id="@+id/tv_current_p"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="@dimen/dp_20"-->
            <!--android:text="@string/current_price"-->
            <!--android:textColor="@color/color_72739C"-->
            <!--android:textSize="@dimen/sp_10"-->
            <!--app:layout_constraintLeft_toRightOf="@+id/tv_current_pl" />-->

            <!--<TextView-->
            <!--android:id="@+id/tv_current_price"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:text="0"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/sp_10"-->
            <!--app:layout_constraintEnd_toEndOf="@+id/tv_current_p"-->
            <!--app:layout_constraintStart_toStartOf="@+id/tv_current_p"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/tv_current_p" />-->


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/cl_content"
        android:layout_width="@dimen/dp_170"
        android:layout_height="match_parent"
        android:background="@color/color_111622"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="杠杆"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="期权"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="下单"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>



